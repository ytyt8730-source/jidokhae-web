# =============================================
# 환경 변수 템플릿 (.env.example)
# =============================================
# 이 파일을 복사하여 .env.local을 생성하세요:
#   cp .env.example .env.local
#
# 주의: .env.local은 절대 커밋하지 마세요!
# =============================================

# ---------------------------------------------
# Supabase (필수)
# ---------------------------------------------
# Supabase 프로젝트 URL (https://xxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=

# Supabase 공개 키 (anon key)
# Settings > API > Project API keys에서 확인
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase 서비스 역할 키 (서버 전용)
# Settings > API > Project API keys에서 확인
# 주의: 클라이언트에 노출되면 안 됩니다
SUPABASE_SERVICE_ROLE_KEY=

# ---------------------------------------------
# 앱 설정
# ---------------------------------------------
# 앱 기본 URL (프로덕션에서는 실제 도메인)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------------------------------------------
# PortOne 결제 (M2)
# ---------------------------------------------
# PortOne 콘솔에서 발급받은 API 키
PORTONE_API_KEY=
PORTONE_API_SECRET=

# 결제 성공 후 리다이렉트 URL
PORTONE_REDIRECT_URL=${NEXT_PUBLIC_APP_URL}/payments/complete

# ---------------------------------------------
# Solapi 알림톡 (M3)
# ---------------------------------------------
# Solapi 콘솔에서 발급받은 API 키
SOLAPI_API_KEY=
SOLAPI_API_SECRET=

# 발신 번호 (사전 등록 필요)
SOLAPI_SENDER_PHONE=

# 카카오 알림톡 채널 ID
SOLAPI_KAKAO_PFID=

# ---------------------------------------------
# 에러 모니터링 (선택)
# ---------------------------------------------
# Sentry DSN (에러 모니터링용)
SENTRY_DSN=

# Sentry 인증 토큰 (소스맵 업로드용)
SENTRY_AUTH_TOKEN=

# Sentry 조직 및 프로젝트
SENTRY_ORG=
SENTRY_PROJECT=

# ---------------------------------------------
# 개발 도구 (선택)
# ---------------------------------------------
# 분석 모드 (bundle analyzer)
ANALYZE=false

# 디버그 모드
DEBUG=false
